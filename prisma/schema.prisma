generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Track {
  id      String @id @default(uuid())
  title    String 
  url String
  artistId String
  artist  Artist @relation(fields: [artistId],references: [id])
  playlists Playlist[]
}

model Artist{
  id      String @id @default(uuid())
  name    String 
  imageUrl String
  tracks   Track[]
}

model Playlist{
  id    String @id @default(uuid())
  title  String
  imageUrl String?
  tracks Track[]
}